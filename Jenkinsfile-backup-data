pipeline {
    agent {
      label 'jenkins-ubuntu-agent'
    }

    options {
        disableConcurrentBuilds()
        timestamps()
        // timeout(time: 1, unit: 'HOURS')
    }

    environment {
        EXTERNAL_HDD_UUID = credentials('external_hdd_uuid')
        UBUNTU_WITH_GPU_PASS= credentials('ubuntu_with_gpu_pass')
        HOSTS = 'ubuntu-with-gpu'
        MOUNT_POINT = '/mnt/externalhdd'
        FROM_PLACE = '/mnt/maindata'
        PARTITION_UUID = credentials('external_hdd_uuid')
    }

    stages {
        stage('Mount storage') {
            steps {
              ansiblePlaybook credentialsId: 'jenkins-agent-ansible-generated-key',
                  disableHostKeyChecking: true,
                  // installation: 'ansible',
                  // become: true,
                //   sudoUser: 'botir',
                  // becomeUser: 'botir',
                  // colorized: true,
                  // forks: 2,
                  // startAtTask: '004',
                  tags: 'mount_by_uuid',
                  // vaultCredentialsId: 'external_hdd_uuid',
                  // vaultTmpPath: '',
                  inventory: 'inventory.yaml',
                  playbook: 'playbook.yaml'
            }
        }
        stage('Copy data') {
            steps {
              ansiblePlaybook credentialsId: 'jenkins-agent-ansible-generated-key',
                  disableHostKeyChecking: true,
                  // installation: 'ansible',
                  // become: true,
                //   sudoUser: 'botir',
                  // becomeUser: 'botir',
                  // colorized: true,
                  // forks: 2,
                  // startAtTask: '004',
                  tags: 'copy_main_data',
                  // vaultCredentialsId: 'external_hdd_uuid',
                  // vaultTmpPath: '',
                  inventory: 'inventory.yaml',
                  playbook: 'playbook.yaml'
            }
        }
        stage('Unmount storage') {
            steps {
              ansiblePlaybook credentialsId: 'jenkins-agent-ansible-generated-key',
                  disableHostKeyChecking: true,
                  // installation: 'ansible',
                  // become: true,
                //   sudoUser: 'botir',
                  // becomeUser: 'botir',
                  // colorized: true,
                  // forks: 2,
                  // startAtTask: '004',
                  tags: 'unmount_drive_by_uuid',
                  // vaultCredentialsId: 'external_hdd_uuid',
                  // vaultTmpPath: '',
                  inventory: 'inventory.yaml',
                  playbook: 'playbook.yaml'
            }
        }
    }

    post {
        always {
            echo 'This will always run after the stages.'
        }
    }
}